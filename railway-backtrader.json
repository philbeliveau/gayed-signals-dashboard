{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "python-services/backtrader-analysis/Dockerfile"
  },
  "deploy": {
    "startCommand": "python start_service.py --production --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "FLASK_ENV": "production",
        "FLASK_HOST": "0.0.0.0",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}