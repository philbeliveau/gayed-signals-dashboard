{
  "name": "gayed-signals-dashboard",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean",
    "dev:web": "turbo run dev --filter=web",
    "dev:backend": "turbo run dev --filter=backend",
    "build:web": "turbo run build --filter=web",
    "build:backend": "turbo run build --filter=backend",
    "check-services": "node scripts/check-services.js",
    "validate-config": "node scripts/validate-config.js",
    "health-check": "npm run validate-config && npm run check-services",
    "start-platform": "./scripts/start-platform.sh",
    "stop-platform": "./scripts/stop-platform.sh",
    "clean-platform": "./scripts/clean-platform.sh",
    "restart-platform": "npm run stop-platform && sleep 3 && npm run start-platform",
    "platform-status": "cat .platform-status 2>/dev/null || echo 'Platform not running'"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  },
  "packageManager": "npm@10.0.0"
}
