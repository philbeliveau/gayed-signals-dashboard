{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start": "python -m uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "build": "echo 'Backend build complete'",
    "test": "python -m pytest tests/ -v",
    "test:watch": "python -m pytest tests/ -v --looponfail",
    "test:coverage": "python -m pytest tests/ --cov=. --cov-report=html",
    "lint": "python -m flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics",
    "clean": "find . -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true"
  },
  "dependencies": {},
  "devDependencies": {}
}